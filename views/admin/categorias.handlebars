<h2>Lista de categorias</h2>
<hr>
 <a href="/admin/categorias/add"><button class="btn btn-success mt-2">Nova categoria</button></a>

 {{#each categoria}}
        <div class="card mt-4">
            <div class="card-body">
                <h4>
                {{nome}}
                </h4>
                <small>
                   slug : {{slug}}
                </small><br>
                <a href="/admin/categorias/edit/{{id}}"><button class="btn btn-success mt-4">Editar Categorias</button></a>
                <form action="/admin/categorias/deletar" method="post">
                    <input type="hidden" name="id" value="{{id}}">
                    <button type="submit" class="btn btn-danger mt-2" >Deletar Categoria</button>
                </form>
            </div>
        </div>

 {{else}}
<h4 class="mt-2">Nenhuma categoria registrada!</h4>
 {{/each}}